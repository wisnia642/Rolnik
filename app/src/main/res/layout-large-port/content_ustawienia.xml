<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ustawienia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michal_hit_kody.aplikacja_test.Ustawienia"
    tools:showIn="@layout/app_bar_ustawienia"
    android:background="@drawable/acc">

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Powtórz hasło:"
        android:scrollbarStyle="insideOverlay"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:textSize="20sp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:hint="Nowe hasło:"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText5"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:textSize="20sp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/editText"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="?attr/actionMenuTextColor"
        android:selectAllOnFocus="true"
        android:hint="User:"
        android:textColorHighlight="@android:color/background_light"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:textSize="20sp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailSubject|textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:selectAllOnFocus="true"
        android:hint="Hasło:"
        android:freezesText="false"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textSize="20sp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:hint="Email:"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText4"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:textSize="20sp" />

    <Button
        android:text="Powrót"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginStart="22dp" />

    <TextView
        android:text="Zmiana hasła lub maila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Zmień"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_marginEnd="29dp"
        android:layout_below="@+id/checkBox2"
        android:layout_toStartOf="@+id/button"
        android:layout_marginTop="26dp" />

    <Button
        android:text="Czyść"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Zmiana maila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_below="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_marginTop="23dp" />

    <CheckBox
        android:text="Zmiana hasła"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/editText2" />


</RelativeLayout>


