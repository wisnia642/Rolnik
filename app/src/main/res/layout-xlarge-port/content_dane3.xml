<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dane3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michal_hit_kody.aplikacja_test.Dane3"
    tools:showIn="@layout/app_bar_dane3"
    android:background="@drawable/acc">

    <Button
        android:text="Wstecz"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:text="Czyść"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button7"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Zapisz"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button6"
        android:layout_below="@+id/time"
        android:layout_toStartOf="@+id/button7"
        android:layout_marginTop="67dp" />

    <TextView
        android:text="Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/date" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:textColor="@android:color/white"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="25sp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="63dp" />

    <TextView
        android:text="Czas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="25sp"
        android:layout_below="@+id/date"
        android:layout_alignStart="@+id/time"
        android:layout_marginTop="71dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/time"
        android:textColor="@android:color/white"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="25sp"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Wprowadzanie daty i czasu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:id="@+id/textView10"
        android:textColor="@android:color/background_light"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView8" />
</RelativeLayout>