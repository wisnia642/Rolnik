<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ustawienia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michal_hit_kody.aplikacja_test.Ustawienia"
    tools:showIn="@layout/app_bar_ustawienia"
    android:background="@drawable/acc">

    <Button
        android:text="Powrót"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_toEndOf="@+id/button"
        android:layout_marginStart="44dp" />

    <Button
        android:text="Czyść"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Zmiana hasła"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:textSize="25sp"
        android:textColor="@android:color/background_light"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/editText2" />

    <CheckBox
        android:text="Zmiana maila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:textSize="25sp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />

    <Button
        android:text="Zmień"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button11"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/checkBox2"
        android:layout_toStartOf="@+id/button"
        android:layout_marginEnd="30dp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Powtórz hasło:"
        android:scrollbarStyle="insideOverlay"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_above="@+id/checkBox3"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginBottom="36dp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="?attr/actionMenuTextColor"
        android:selectAllOnFocus="true"
        android:hint="User:"
        android:textColorHighlight="@android:color/background_light"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_above="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailSubject|textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:selectAllOnFocus="true"
        android:hint="Hasło:"
        android:freezesText="false"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_above="@+id/editText4"
        android:layout_alignStart="@+id/editText"
        android:layout_marginBottom="39dp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:hint="Email:"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText4"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_above="@+id/editText5"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginBottom="32dp" />

    <EditText
        android:textCursorDrawable="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:hint="Nowe hasło:"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText5"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_above="@+id/editText2"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="33dp" />

    <TextView
        android:text="Zmiana hasła lub maila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="35sp"
        android:textColorHint="@android:color/background_light"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginBottom="21dp" />


</RelativeLayout>


