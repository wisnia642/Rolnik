<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_podglad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michal_hit_kody.aplikacja_test.Podglad"
    tools:showIn="@layout/app_bar_podglad"
    android:background="@drawable/acc">

    <Button
        android:text="Zapisz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/button9"
        android:layout_marginEnd="32dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button10"
        android:visibility="invisible" />

    <TextView
        android:text="Wprowadzone dane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Zatwierdz"
        android:layout_height="wrap_content"
        android:id="@+id/button14"
        android:layout_width="200dp"
        android:layout_below="@+id/lista1"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginStart="177dp" />

    <Button
        android:text="Wstecz"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_width="200dp"
        android:layout_marginEnd="168dp"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_alignEnd="@+id/textView11" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText7"
        android:hint="Data do:"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/background_light"
        android:textCursorDrawable="@android:color/background_light"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="300dp"
        android:textSize="20sp"
        android:layout_above="@+id/lista1"
        android:layout_alignStart="@+id/button14" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText6"
        android:hint="Data od:"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/background_light"
        android:textCursorDrawable="@android:color/background_light"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="20sp"
        android:layout_width="300dp"
        android:layout_above="@+id/lista1"
        android:layout_alignEnd="@+id/button10" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lista1"
        android:layout_height="250dp"
        android:layout_above="@+id/button9"
        android:layout_alignParentStart="true" />
</RelativeLayout>